<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <corners android:topLeftRadius="50dp" android:bottomRightRadius="50dp"></corners>
            <solid android:color="@android:color/holo_orange_dark"></solid>
        </shape>
    </item>

    <item>
    <shape>
        <corners android:topRightRadius="50dp" android:bottomLeftRadius="50dp"></corners>
        <gradient android:centerColor="@android:color/holo_blue_light" android:startColor="@android:color/holo_blue_dark" android:endColor="@android:color/black"
            android:angle="135"></gradient>
    </shape>
    </item>
</selector>